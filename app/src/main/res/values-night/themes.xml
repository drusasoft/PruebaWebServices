<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PruebaWebServices" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_200</item>
        <item name="colorPrimaryVariant">@color/indigo_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/indigo_100</item>

    </style>

    <!-- Estilo de la ToolaBar -->
    <style name="toolBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:background">@color/indigo_500</item>
    </style>

    <style name="toolBarTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="titleTextColor">@color/white</item>
        <item name="fontFamily">@font/aldrich</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Fin Estilo de la ToolaBar -->

    <style name="cardViewBordeRecortados" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerRadius">10dp</item>
    </style>


</resources>